{# Show a message #}
<turbo-stream action="append" target="template-studio--message">
    <template>
        {% embed "@Contao/backend/template_studio/_message.html.twig" with {success: true} %}
            {% trans_default_domain "contao_template_studio" %}

            {% block content %}
                {{ 'message.save.success'|trans([identifier]) }}
            {% endblock %}
        {% endembed %}
    </template>
</turbo-stream>

{# Reload autocompletions #}
{{ render(path('_contao_template_studio_autocomplete_data.stream', {identifier})) }}
